{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Deploy & Start",
            "type":"cortex-debug",
            "cwd": "${workspaceRoot}",
            "executable": "${command:cmake.launchTargetPath}",
            "request": "launch",
            "servertype": "openocd",
            "gdbPath" : "arm-none-eabi-gdb",
            "svdPath": "STM32F411.svd",
            "svdFile": "STM32F411.svd",

// ============== OpenOCD Config BEGIN ==============
            "interface": "swd",
            "configFiles": [
                "${config:openOCD_CFG}"
            ],
            "serverArgs": [
                "-s", "${config:openOCD_scripts}",
                // "-c", "itm port 0 on",
            ],
            // ============== OpenOCD Config END ==============

            "runToEntryPoint": "main",
            // Work around for stopping at main on restart
            "postRestartCommands": [
                "break main",
                "continue"
            ],
            // Work around for debugging via SWO
            // "preLaunchTask": "SWO",
            // "postDebugTask": "Stop SWO"
        },
        {
            "name": "Debug Google Tests",
            "type": "lldb",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "args": [],
            "cwd": "${workspaceFolder}",
          }
    ]
}