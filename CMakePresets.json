{
    "version": 8,
    "configurePresets": [
        {
            "name": "PrintSpider_stm32",
            "displayName": "PrintSpider_stm32",
            "description": "Using compilers: C = arm-none-eabi-gcc.exe, CXX = arm-none-eabi-g++.exe",
            "binaryDir": "${sourceDir}/Debug",
            "generator": "Ninja",
            "toolchainFile": "${sourceDir}/cmake/toolchains/stm32-toolchain.cmake",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "BUILD_TESTS": "OFF",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/stm32"
            },
            "environment": {}
        },
        {
            "name": "host-tests",
            "displayName": "üè† Host Tests",
            "description": "Build tests for x86/x64 (without STM32 toolchain)",
            "generator": "Ninja",
            "toolchainFile": "${sourceDir}/cmake/toolchains/host-toolchain.cmake",
            "binaryDir": "${sourceDir}/build/build-host",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "BUILD_TESTS": "ON",
                "CMAKE_CROSSCOMPILING": false
            }
        }

    ],
    "buildPresets": [
    {
      "name": "build-tests",
      "configurePreset": "host-tests",
      "jobs": 4
    }
  ]
}